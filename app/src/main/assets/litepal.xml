<litepal>
    <!--将数据库名称指定为cool_weather
        版本为1
        并将这三个实体类映射到列表中
        别忘记在AndroidManifest.xml中声明-->
    <dbname value="cool_weather"/>
    <version value="1"/>
    <!--谨记这里是数据库类的地址，要因地制宜，不能死搬第一行代码上的，死搬是错的-->
    <list>
        <mapping class="com.example.jazzi.coolweather.db.Province"/>
        <mapping class="com.example.jazzi.coolweather.db.City"/>
        <mapping class="com.example.jazzi.coolweather.db.County"/>
    </list>

</litepal>